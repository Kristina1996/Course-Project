<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvAuthor"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvAuthor"
        android:layout_below="@+id/tvAuthor"
        android:layout_marginTop="18dp"
        android:layout_alignEnd="@+id/tvTime" />

    <Button
        android:id="@+id/btnAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvText"
        android:layout_below="@+id/tvText"
        android:layout_marginTop="13dp" />

    <Button
        android:id="@+id/btnAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnAnswer1"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/btnAnswer1" />

    <Button
        android:id="@+id/btnComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:layout_alignBaseline="@+id/btnAnswer2"
        android:layout_alignBottom="@+id/btnAnswer2"
        android:layout_alignEnd="@+id/tvTime" />

    <TextView
        android:id="@+id/tvCount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAnswer1"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@+id/btnAnswer2" />

    <TextView
        android:id="@+id/tvCount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnAnswer2"
        android:layout_alignTop="@+id/tvCount1" />

</RelativeLayout>